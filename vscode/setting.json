    "editor.wordWrap": "on",
    "editor.tabSize": 2,
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo"
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo"
                }
            ]
        }
    ],
    "workbench.colorTheme": "Andromeda",
    "cSpell.userWords": [
        "fastcgi",
        "krazy",
        "nakasone",
        "nginx",
        "phpmyadmin"
    ],
    "git.autofetch": true,
    "liveServer.settings.donotShowInfoMsg": true,
